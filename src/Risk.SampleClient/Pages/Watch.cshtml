@page
@using Risk.Shared
@using System.Collections.Generic
@model Risk.SampleClient.Pages.VisualizeModel
@{
}
<meta http-equiv="refresh" content="1">
<style>
.location{
    font-weight: bold;
    width: 48%;
    float: left;
}
.name {
    font-size: 14pt;
    color: blue
}
.armies {
    color: red;
    font-weight: bold;
    width: 48%;
    float: right;
    text-align: right;
}
</style>

<h2>@Model.Status.GameState</h2>

<div class="playerStats">
    <table cellpadding="10px,2px">
        <thead>
            <td>Player Name</td>
            <td>Territories</td>
            <td>Armies</td>
            <td>Score</td>
        </tr>
        @foreach (var p in Model.Status.PlayerStats)
        {
        <tr>
            <td>@p.Name</td>
            <td>@p.Territories</td>
            <td>@p.Armies</td>
            <td>@p.Score</td>
        </tr>
        }
    </table>
</div>

<div class="grid-container">
    @{
        var maxRow = Model.Status.Board.Max(t => t.Location.Row);
        var maxCol = Model.Status.Board.Max(t => t.Location.Column);
    }
    <table border="1px" cellpadding="10px">
        @for (var row = 0; row <= maxRow; row++)
        {
        <tr>
            @for (var col = 0; col <= maxCol; col++)
            {
            <td class="cell">
                @{
                    var cell = Model.Status.Board.First(t => t.Location == new Location(row, col));
                }
                <div class="location">@cell.Location</div>
                <div class="armies">@cell.Armies</div>
                <div class="name">@cell.OwnerName</div>
            </td>
            }
        </tr>
        }
    </table>
</div>